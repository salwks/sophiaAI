  "advanced_metrics": {
    "SDNR": {
      "definition": "Signal Difference to Noise Ratio",
      "formula": "SDNR = |S1 - S2| / σ",
      "relation_to_CNR": "Essentially equivalent to CNR in practice",
      "clinical_threshold": "SDNR ≥ 5 (Rose Criterion)"
    },
    "NEQ": {
      "definition": "Noise Equivalent Quanta",
      "formula": "NEQ(f) = DQE(f) × q",
      "meaning": "Effective number of quanta contributing to image at frequency f"
    },
    "d_prime": {
      "definition": "Detectability index (d')",
      "formula_simple": "d' = CNR = ΔS/σ",
      "formula_frequency": "d'^2 = ∫ (C(f)² × MTF(f)² / NPS(f)) df",
      "relation_to_dose": "d' ∝ √Dose",
      "dose_reduction_effect": "40% dose reduction → d' decreases by 22.5%"
    }
  },

