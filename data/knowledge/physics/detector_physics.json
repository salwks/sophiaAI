  "DQE_physics": {
    "definition": "Detective Quantum Efficiency - 입력 SNR 대비 출력 SNR의 제곱비",
    "formula": "DQE(f) = (SNR_out(f))^2 / (SNR_in(f))^2",
    "expanded_formula": "DQE(f) = (MTF(f))^2 / (NPS_normalized(f) * q)",
    "components": {
      "MTF": "Modulation Transfer Function - 공간주파수별 대조도 전달 효율",
      "NPS": "Noise Power Spectrum - 주파수별 노이즈 분포",
      "q": "입사 X선 광자 밀도 (photons/mm^2)"
    },
    "frequency_dependence": {
      "at_zero_frequency": "최대값, 전체 흡수 효율 반영",
      "at_high_frequency": "MTF 저하로 급격히 감소",
      "clinical_relevance": "미세석회화 검출은 2-5 lp/mm 범위의 DQE가 중요"
    },
    "dose_relationship": {
      "general": "DQE는 선량에 약간 의존 (quantum-limited regime에서 일정)",
      "low_dose_behavior": "매우 낮은 선량에서 electronic noise가 지배적 → DQE 감소",
      "formula_approximation": "DQE_eff ≈ DQE_ideal * (1 - σ_electronic²/σ_quantum²)"
    }
  },

  "MTF_physics": {
    "definition": "Modulation Transfer Function - 시스템의 공간 해상도 특성",
    "formula": "MTF(f) = |FT{LSF(x)}| = |FT{PSF(x,y)}|",
    "measurement_methods": ["Edge method (slanted edge)", "Slit method", "Bar pattern"],
    "factors_affecting_MTF": {
      "detector_element_size": "픽셀 크기 ↓ → MTF ↑",
      "scintillator_thickness": "두께 ↑ → 흡수 ↑, MTF ↓ (trade-off)",
      "light_spread": "광확산 ↑ → MTF ↓ (간접변환의 주요 제한)",
      "focal_spot_size": "초점 크기 ↑ → geometric unsharpness ↑ → MTF ↓"
    },
    "clinical_thresholds": {
      "CAUTION_NOTE": "이 임계값들의 출처 불명확. 참고용으로만 사용",
      "microcalcification_detection": "MTF(5 lp/mm) ≥ 0.30 (출처 미확인)",
      "mass_detection": "MTF(2 lp/mm) ≥ 0.50 (출처 미확인)"
    }
  },

