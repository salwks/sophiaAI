  "formulas": {
    "luminance_ratio": {
      "formula": "LR = L_max / L_min",
      "example": "420 / 1.2 = 350",
      "requirement": "> 250 for mammography primary displays"
    },
    "gsdf_jnd": {
      "formula": "JND(L) = a + b × log10(L) + c × [log10(L)]² + d × [log10(L)]³ + e × [log10(L)]⁴",
      "purpose": "그레이스케일 표준 표시 함수 (DICOM Part 14)"
    },
    "uniformity": {
      "formula": "Uniformity = (L_max - L_min) / (L_max + L_min) × 200%",
      "criterion": "< 30%"
    },
    "geometric_distortion": {
      "formula": "Distortion = |measured - expected| / expected × 100%",
      "criterion_primary": "< 2%",
      "criterion_secondary": "< 5%"
    }
  },
